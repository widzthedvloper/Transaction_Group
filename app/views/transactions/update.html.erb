<div class='py-5 container-fluid d-flex justify-content-center'>
  <%= link_to "<<", request.referer.present? ? request.referer : transaction_path, class: "text-white border rounded-circle p-2 pt-2 text-decoration-none me-5 g-transaction-cta" %>
  <h1 class="text-light">Add To A Group</h1>
</div>
<div class="gray">
  <div class="container">
  <h2 class="text-white">Existing Groups</h2>
  <% @groups.each do |group| %>
    <div class="text-white container">
      <span class="badge rounded-pill g-transaction-cta"><%= group.id %></span><p class="d-inline">&nbsp<%= group.name %></p>
    </div>
  <% end %>
  </div>
  <div class="container">
    <h2 class="text-white mt-2">Group Transaction</h2>
    <%= form_with model: @transactions, url: add_transaction_path do |form| %>
      <%= form.label :group, class: "text-white"%>
      <%= form.text_field :group, class: "form-control", placeholder: "Name of a group" %>
      <%= form.number_field :transaction_id, value: @transaction.id, type: :hidden %>
      <%= form.submit 'Group Transaction', class: "btn  g-transaction-cta form-control" %>
    <% end %>
  </div>
